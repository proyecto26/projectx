{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["@react-router/node", "vite/client", "node"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "rootDirs": [".", "./.react-router/types"],
    "tsBuildInfoFile": "./dist/tsconfig.app.tsbuildinfo",
    "paths": {
      "~/*": ["./app/*"]
    },
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "composite": true
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.js",
    "app/**/*.jsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx",
    ".react-router/types/**/*"
  ],
  "exclude": [
    "dist",
    "tests/**/*.spec.ts",
    "tests/**/*.test.ts",
    "tests/**/*.spec.tsx",
    "tests/**/*.test.tsx",
    "tests/**/*.spec.js",
    "tests/**/*.test.js",
    "tests/**/*.spec.jsx",
    "tests/**/*.test.jsx",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts"
  ],
  "references": [
    {
      "path": "../../libs/backend/core/tsconfig.lib.json"
    },
    {
      "path": "../../libs/backend/email/tsconfig.lib.json"
    },
    {
      "path": "../../libs/frontend/ui/tsconfig.lib.json"
    },
    {
      "path": "../../libs/models/tsconfig.lib.json"
    }
  ]
}
