{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2021",
    "types": ["react", "react-dom"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.*",
    "**/*.test.*",
    "**/*.stories.*",
    "src/test-utils.*"
  ]
}
